generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int  @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      EnumRole 
  isVerified Boolean @default(false)
  studentEmail String?
  otp       Int?
  refreshToken String?
  otpExpiry DateTime? @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
enum EnumRole {
  STUDENT
  PARENT
  SCHOOL
}

model StudentAchievement {
  id       Int    @id @default(autoincrement())
  studentId Int
  title     String
  description String
  SchoolId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

